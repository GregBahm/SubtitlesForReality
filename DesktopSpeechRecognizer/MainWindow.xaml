<Window x:Class="Microsoft.CognitiveServices.SpeechRecognition.MainWindow"
        x:Name="_mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Microsoft.CognitiveServices.SpeechRecognition Example"
        Width="500">
    <DockPanel>
        <DockPanel Grid.Column="1"
                   DockPanel.Dock="Top">
            <Button DockPanel.Dock="Right"
                    Padding="5"
                    Click="DeleteKey_Click">Delete Key</Button>
            <Button DockPanel.Dock="Right"
                    Padding="5"
                    Click="SaveKey_Click">Save Key</Button>
            <TextBox VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Padding="5"
                     Text="{Binding ElementName=_mainWindow, Path=SubscriptionKey, Mode=TwoWay}" />
        </DockPanel>
        <Button x:Name="_startButton"
                Content="Start _Recognition"
                Click="StartButton_Click"
                DockPanel.Dock="Bottom"
                Padding="5" />
        <TextBox x:Name="_logText"
                 Grid.Row="1"
                 Grid.Column="1"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalScrollBarVisibility="Visible" />
    </DockPanel>
</Window>
